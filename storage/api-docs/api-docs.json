{
    "openapi": "3.0.0",
    "info": {
        "title": "Laravel Authentication API",
        "description": "مستندات کامل مربوط به ثبت‌نام، ورود و خروج کاربران",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost/api",
            "description": "سرور لوکال توسعه"
        }
    ],
    "paths": {
        "/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "ثبت‌نام کاربر جدید",
                "operationId": "0bc344378e08727ab475199d64b21f9b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "email",
                                    "phone",
                                    "password",
                                    "address",
                                    "role"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "mohammad123"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "test@example.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "09123456789"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "abc12345"
                                    },
                                    "address": {
                                        "type": "string",
                                        "example": "Tehran, Iran"
                                    },
                                    "role": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "ثبت‌نام موفق با توکن"
                    },
                    "422": {
                        "description": "خطای اعتبارسنجی"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "ورود کاربر",
                "operationId": "fce9a79ce1f581e47e35685084324bd8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "test@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "abc12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "ورود موفق با توکن"
                    },
                    "401": {
                        "description": "اطلاعات اشتباه"
                    },
                    "422": {
                        "description": "خطای اعتبارسنجی"
                    }
                }
            }
        },
        "/logout": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "خروج از حساب",
                "operationId": "f6ded2715df6a9c028403a6a1dcd5745",
                "responses": {
                    "200": {
                        "description": "خروج موفق"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        }
    ]
}